<h3><%= @rank.level%> Review</h3>

<% @books.each do |book| %>
    <div class="col-sm-4">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h4><%= book.title %></h4>
            <p><%= book.rank.level%></p>
            <div class="buttons">
              <a href="/books/<%= book.id %>" data-method="delete"><span class="glyphicon glyphicon-trash"></span></a>
              <a href="/books/<%= book.id %>/edit"><span class="glyphicon glyphicon-edit"></span></a>
            </div>
          </div>
          <div class="panel-body">
            <%= book.body %>
          </div>
        </div>
    </div>
<% end %>